<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/conn_ordi"
    android:soundEffectsEnabled="true">
    
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
  >
    <TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/texteAccueil1"
	    android:text="L'ENTRAINEUR INFORMATIQUE\n Le Prof d'info dÃ©barque dans vos SmartPhones"
	    android:textStyle="bold"
	    android:background="#ffff00"
	    android:gravity="center"
	    android:layout_marginBottom="20dp"
	    />
   </LinearLayout>
   
    <GridView
        android:layout_height="wrap_content"
        android:id="@+id/gridViewAccueil"
        android:layout_width="match_parent"
        android:numColumns="auto_fit"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:soundEffectsEnabled="true">
    </GridView>
    
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
  >
    <TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="assambapasquier@yahoo.fr"
	    android:autoLink="all"
	    android:textStyle="bold"
	    android:background="#ffff00"
	    android:gravity="bottom|center"
	    android:layout_marginTop="10dp"
	    />
    
  </LinearLayout>
</LinearLayout>



