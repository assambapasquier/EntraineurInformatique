<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|center_horizontal"
    >
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
  >
    <TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="RESULTAT DU NIVEAU 1"
	    android:textStyle="bold"
	    android:background="#ffff00"
	    android:gravity="center"
	    android:layout_marginBottom="30dp"
	    />
    </LinearLayout>
    
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/texteVousAvezEu"
    android:gravity = "center"
    android:textSize = "30dip"
    android:text="BRAVO VOUS AVEZ EU:"
    />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textePoints"
    android:textSize = "45dip"
    android:gravity = "center"
    
    />
    
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
  >
    <TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/passernivsup"
	    android:textStyle="bold"
	    android:background="#ffff00"
	    android:gravity="center"
	    android:layout_marginBottom="7dp"
	    />
    </LinearLayout>

<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="5dp"
    android:gravity="center_vertical|center_horizontal"
    >
<Button 
    android:layout_width = "wrap_content"
    android:layout_height = "wrap_content"
    android:id = "@+id/continuer"
    android:text="      "
    style="@style/StyleButton5"
    > 
</Button>

<Button 
    android:layout_width = "wrap_content"
    android:layout_height = "wrap_content"
    android:id = "@+id/sauvegarder"
    android:text="       "
    style="@style/StyleButton6"
    android:layout_marginLeft="30dp"
    > 
</Button>
</LinearLayout>

</LinearLayout>
