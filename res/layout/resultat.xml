    android:gravity="center"
    android:id = "@+id/btnNewPartie"
    android:text=""
    > 
</Button>

<Button 
    android:layout_width = "fill_parent"
    android:layout_height = "wrap_content"
    android:gravity="center"
    android:id = "@+id/btnQuitter"
    android:text="Retour au menu principal"
    > 
</Button>

